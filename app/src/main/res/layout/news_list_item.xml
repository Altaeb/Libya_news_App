<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/relativeLayout_news_list">

    <LinearLayout style="@style/linearLayout_news_list">

        <RelativeLayout
            style="@style/relativeLayout_news_list_item"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/news_section"
                style="@style/news_section"
                tools:targetApi="jelly_bean"
                tools:text="Sport" />

            <TextView
                android:id="@+id/news_headline"
                style="@style/news_headline"
                tools:targetApi="jelly_bean"
                tools:text="@string/placeholder_text_headline" />

            <TextView
                android:id="@+id/news_time"
                style="@style/news_time"
                tools:targetApi="jelly_bean"
                tools:text="@string/placeholder_text_author" />

            <TextView
                android:id="@+id/news_contributor_name"
                style="@style/news_contributor_name"
                tools:targetApi="jelly_bean"
                tools:text="@string/placeholder_text_author" />
        </RelativeLayout>

        <View
            android:id="@+id/buffer_view"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/news_thumbnail"
        style="@style/news_thumbnail"
        android:src="@drawable/no_image_placeholder" />
</RelativeLayout>