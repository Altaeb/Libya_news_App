<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFFFFF"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/news_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:paddingBottom="4dp"
                android:textColor="#2979FF"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Sport"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/news_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_section"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:textColor="#212121"
                android:textSize="14sp"
                tools:text="@string/placeholder_text_headline"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif"
                android:textColor="#757575"
                android:textSize="12sp"
                tools:text="@string/placeholder_text_author"
                android:layout_alignParentEnd="true"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/news_contributor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/news_section"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:textColor="#757575"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="@string/placeholder_text_author"
                android:paddingStart="4dp"
                tools:targetApi="jelly_bean"
                android:layout_toEndOf="@+id/news_section" />
        </RelativeLayout>

        <View
            android:id="@+id/buffer_view"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/news_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/no_image_placeholder"
        android:contentDescription="@string/news_thumbnail"
        android:layout_alignParentEnd="true" />
</RelativeLayout>